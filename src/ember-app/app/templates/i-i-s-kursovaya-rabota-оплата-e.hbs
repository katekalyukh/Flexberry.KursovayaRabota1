<h3 class="ui header">{{t "forms.i-i-s-kursovaya-rabota-оплата-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-rabota-оплата-e.датаОплаты-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаОплаты
      class=(if (v-get validationModel "датаОплаты" "isInvalid") "error")
      data-test-i-i-s-kursovaya-rabota-оплата-e-датаОплаты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаОплаты" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяОплаты
      class=(if (v-get validationModel "времяОплаты" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-rabota-оплата-e.времяОплаты-caption")
      data-test-i-i-s-kursovaya-rabota-оплата-e-времяОплаты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяОплаты" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kursovaya-rabota-оплата-e-видОплаты="true">
    <label>{{t "forms.i-i-s-kursovaya-rabota-оплата-e.видОплаты-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kursovaya-rabota-тип-оплаты")
      value=model.видОплаты
      class=(if (v-get validationModel "видОплаты" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "видОплаты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-rabota-оплата-e.печатьФото-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.печатьФото
      displayAttributeName="номерЗаказа"
      autocomplete=true
      relationName="печатьФото"
      projection="ПечатьФотоL"
      title=(t "forms.i-i-s-kursovaya-rabota-оплата-e.печатьФото-caption")
      readonly=readonly
      componentName="печатьФотоLookup"
      class=(if (v-get validationModel "печатьФото" "isInvalid") "error")
      data-test-i-i-s-kursovaya-rabota-оплата-e-печатьФото=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "печатьФото" "message")}}
  </div>
</form>
